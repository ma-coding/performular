{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "target": "es5",
        "typeRoots": ["node_modules/@types"],
        "lib": ["es2017", "dom"],
        "paths": {
            "@performular/ng-common": ["projects/ng-common/src/index.ts"],
            "@performular/core": ["projects/core/src/index.ts"],
            "@performular/ui-material": ["projects/ui-material/src/index.ts"]
        }
    }
}
